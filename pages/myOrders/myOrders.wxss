@import "../nearbyEquipment/nearbyEquipment.wxss";

@import "../appointeToDoor/appointeToDoor.wxss";

.tabHead_box {
    height: 57px;
    width: 100%;
    position: fixed;
    top: 0;
    left: 0;
    z-index: 2;
    background-color: #fff;
}

.tab {
    width: 100%;
    position: relative;
    padding: 20rpx 0;
    background-color: #fbf9f9;
    box-sizing: border-box;
}

.tab-head {
    width: 92%;
    margin: 0 auto;
    display: flex;
    flex-direction: row;
    flex-wrap: nowrap;
    justify-content: space-around;
    border-radius: 14rpx;
    position: absolute;
    top: 20rpx;
    left: 4%;
    font-size: 16px;
    overflow: hidden;
}

.tab-head view {
    color: #333;
    width: 33.3%;
    display: inline-flex;
    justify-content: center;
    align-content: center;
    padding: 8rpx 0;
}

.tab-head .active {
    color: #261300;
    font-weight: bold;
}

.tab-content {
    line-height: 160%;
    margin-top: 57px;
    background: #fff;
}

.tab-content .right-item {
    display: none;
}

.tab-content .right-item.active {
    display: block;
    position: relative;
    height: 100%;
}

.cancle_reason {
    color: #fa6502;
}

.display {
    display: block;
    width: 100%;
    height: 100%;
    position: absolute;
    top: 50%;
    margin-top: 230rpx;
    text-align: center;
}

.tab-head .active text {
    padding-bottom: 27rpx;
    border-bottom: 2px solid #261300;
}

.padding-b {
    padding-bottom: 38rpx;
}